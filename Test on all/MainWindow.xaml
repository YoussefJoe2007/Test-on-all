<Window x:Class="Test_on_all.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400" WindowStartupLocation="CenterScreen" Background="#2D2F33">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Username" Foreground="#EDEDED" Margin="0,10,0,0"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Height="30" Margin="0,5"/>
            <Label Content="Password" Foreground="#EDEDED" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Height="30" Margin="0,5"/>
            <Button Content="Login" Width="200" Height="40" Click="LoginButton_Click" Margin="20,20,20,0"
                    Background="#4CAF50" Foreground="White" FontWeight="Bold" BorderBrush="#3A3A3A" BorderThickness="1"/>
        </StackPanel>
    </Grid>
</Window>
